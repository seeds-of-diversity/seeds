# gthumb makes .comments folder with *.jpg.xml files wherever you open an image
# Run this from the root of an image folder

echo ***Removing these
find -type f -name *\.jpg\.xml
find -type f -name *\.JPG\.xml
find -type f -name *\.jpeg\.xml
find -type f -name *\.webp\.xml
find -type d -name \.comments
echo ***End
find -type f -name *\.jpg\.xml -exec rm {} \;
find -type f -name *\.JPG\.xml -exec rm {} \;
find -type f -name *\.jpeg\.xml -exec rm {} \;
find -type f -name *\.webp\.xml -exec rm {} \;
find -type d -name \.comments -exec rmdir {} \;


echo ***Removing these
find -type f -name \.directory
find -type f -name \.directory -exec rm {} \;
